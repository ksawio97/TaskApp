<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:TaskApp.Model"
             xmlns:viewmodel="clr-namespace:TaskApp.ViewModel"
             x:DataType="viewmodel:ToDoTaskViewModel"
             x:Class="TaskApp.View.MainPage"
             Title="{Binding title}">
    
    <Grid RowDefinitions="*, auto">
        <CollectionView Grid.Row = "0" ItemsSource ="{Binding toDoTasks}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:ToDoTask">

                    <Frame>
                        <Label Text="{Binding title}"/>
                    </Frame>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Grid.Row ="1" Text="Add Task" Command="{Binding GoToNewTaskPageCommand}"></Button>
    </Grid>

</ContentPage>
