<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:TaskApp.Model"
             x:Class="TaskApp.MainPage">

    <CollectionView>
        <CollectionView.ItemsSource>
            <x:Array Type="{x:Type model:ToDoTask}">
                <model:ToDoTask title="test" description="lallalallalalalallalalal"/>
                <model:ToDoTask title="test2" description="lallalallalalalallalalal"/>
            </x:Array>
        </CollectionView.ItemsSource>

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:ToDoTask">
                <VerticalStackLayout Padding="10" Spacing="5">
                    <Label Text="{Binding title}"/>
                    <Label Text="{Binding description}"/>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
                
    </CollectionView>
</ContentPage>
